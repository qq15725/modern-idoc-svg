{
  "name": "modern-idoc-svg",
  "type": "module",
  "version": "0.0.6",
  "packageManager": "pnpm@10.19.0",
  "description": "IDoc to SVG renderer",
  "author": "wxm",
  "license": "MIT",
  "homepage": "https://github.com/qq15725/modern-idoc-svg",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qq15725/modern-idoc-svg.git"
  },
  "bugs": {
    "url": "https://github.com/qq15725/modern-idoc-svg/issues"
  },
  "keywords": [
    "idoc",
    "idoc-to-svg",
    "typescript"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "browser": "./dist/index.js",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && unbuild",
    "dev": "vite playground",
    "lint": "eslint .",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release": "bumpp package.json --commit \"release: v%s\" --push --all --tag",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "modern-idoc": "^0.10.5",
    "modern-text": "^1.10.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@types/node": "^24.10.0",
    "bumpp": "^10.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.39.0",
    "lint-staged": "^16.2.6",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
